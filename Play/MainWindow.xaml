<Window x:Class="Play.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Play"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Без названия.png"/>
        </Grid.Background>
        <Canvas Background="#7FFFE4C4" Width="300" Height="200">
            <Label Canvas.Left="88" HorizontalAlignment="Center" VerticalAlignment="Top">Имя первого игрока</Label>
            <TextBox x:Name="user_first" Width="200" Height="30" Canvas.Left="50" Canvas.Top="26" ></TextBox>
            <Label Canvas.Left="88" HorizontalAlignment="Center" VerticalAlignment="Top" Canvas.Top="74">Имя второго игрока</Label>
            <TextBox x:Name="user_second" Width="200" Height="30" Canvas.Left="61" Canvas.Top="114" ></TextBox>
            <Button Width="150" Height="30" Canvas.Left="75" Canvas.Top="160" HorizontalAlignment="Center" VerticalAlignment="Top" Background="#FF19DC19" Click="StartGame">Начать игру</Button>
        </Canvas>
    </Grid>
</Window>
